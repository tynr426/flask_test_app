<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:text="登录" />

        <Button
            android:id="@+id/btnDrawerLayout"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="抽屉" />
        <Button
            android:id="@+id/btnDrawerLayout2"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="抽屉之BaseAdapter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:id="@+id/openWeb"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="打开一个web网页" />

        <Button
            android:id="@+id/openDialog"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="弹出一个Dialog" />
    </LinearLayout>

    <Button
        android:id="@+id/startOtherAct"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="进入另一个activity" />
    <Button
        android:id="@+id/btnLaunchMode"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="启动模式" />

    <Button
        android:id="@+id/btnContext"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="图片控制" />

    <Button
        android:id="@+id/btnService"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="服务" />

    <Button
        android:id="@+id/btnReceiver"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="广播接受器" />

    <Button
        android:id="@+id/btnCheckPermission"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="权限检测" />

    <Button
        android:id="@+id/btnRecyclerView"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="RecyclerView" />

    <Button
        android:id="@+id/btnDefinedMenu"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="自定义菜单" />

    <Button
        android:id="@+id/btnPageAdapter"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="引导页" />
</LinearLayout>